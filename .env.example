# Security Settings
SECRET_KEY=your_very_long_secure_secret_key_here
SESSION_COOKIE_SECURE=True
PERMANENT_SESSION_LIFETIME=3600

# Database Settings
DATABASE_URL=sqlite:///path/to/your/database.db

# Rate Limiting Settings
RATELIMIT_DEFAULT=100/hour
REDIS_URL=redis://localhost:6379  # Optional: for rate limiting storage

# Security Headers
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"

# Mail Settings
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_USE_TLS=True
MAIL_DEFAULT_SENDER=no-reply@example.com